@model IEnumerable<CMS.DocumentEngine.Types.Team>
@{
    ViewBag.Title = "SectionDetails";
}

<h2>Details</h2>

<table class="table table-striped table-hover table-bordered">
    <tr>
        <th>Team name</th>
        <th>Team delivery</th>
        <th>Available positions</th>
        <th></th>
    </tr>

    @foreach (var team in Model)
    {
        <tr>
            <td>
                @team.Fields.Name
            </td>
            <td>
                @team.Fields.Delivery
            </td>
            <td>
                @team.Fields.AvailablePositions
            </td>
            <td>
                <div class="btn-group" role="group">

                    <a class="btn btn-default" href="@Url.Action("SectionDetails", "Teams", new { id = team.NodeID})">
                        Details
                        <span class="glyphicon glyphicon-zoom-in" aria-hidden="true"></span>
                    </a>

                </div>
            </td>
        </tr>
    }
</table>

<div>
    @Html.ActionLink("Back to the section", "Index", null, new { @class = "btn btn-default" })
</div>