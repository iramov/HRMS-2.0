@model IEnumerable<CMS.DocumentEngine.Types.Teams>
@{
    ViewBag.Title = "AllTeams";
}

<h2>All teams sections</h2>

<div>
    @Html.ActionLink("Show all teams", "Index", "Teams", null, new { @class = "btn btn-default" })
</div>
<table class="table table-striped table-hover table-bordered">
    <tr>
        <th>Teams section name</th>
        <th>Description</th>
        <th>Actions</th>
    </tr>
    @foreach (var sectionTeams in Model)
    {
        <tr>
            <td>
                @sectionTeams.Fields.SectionName
            </td>
            <td>
                @sectionTeams.Fields.Description
            </td>
            <td>
                <div class="btn-group" role="group">

                    <a class="btn btn-default" href="@Url.Action("SectionDetails", "Teams", new { id = sectionTeams.NodeID })">
                        Details
                        <span class="glyphicon glyphicon-zoom-in" aria-hidden="true"></span>
                    </a>
                </div>
            </td>
        </tr>
    }
</table>

<div>
    @Html.ActionLink("Back to List", "Index", "Home", null, new { @class = "btn btn-default" })
</div>