@model IEnumerable<CMS.DocumentEngine.Types.Team>
@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<table class="table table-striped table-hover table-bordered">
    <tr>
        <th>Team name</th>
        <th>Team delivery</th>
        <th>Available positions</th>
        <th></th>
    </tr>

    @foreach (var team in Model)
    {
        <tr>
            <td>
                @team.Fields.Name
            </td>
            <td>
                @team.Fields.Delivery
            </td>
            <td>
                @team.Fields.AvailablePositions
            </td>
            <td>
                @Html.ActionLink("Details", "TeamDetails", new { id = team.NodeID })
            </td>
        </tr>
    }
</table>

<div>
    @Html.ActionLink("Back to the section", "Index", null, new { @class = "btn btn-default" })
</div>