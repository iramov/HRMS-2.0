@model HRMS.Models.ViewModels.ProjectsSectionViewModel

@{
    ViewBag.Title = "Section details";
}

<h2>Section details with projects</h2>

<div>
    <dl class="dl-horizontal">
        <dt>
            Project section name
        </dt>
        <dd>
            @Model.Section.Fields.SectionName
        </dd>
        <dt>
            Project section description
        </dt>
        <dd>
            @Model.Section.Fields.Description
        </dd>
    </dl>
</div>

<table class="table table-striped table-hover table-bordered">
    <tr>
        <th>
            @Html.ActionLink("Project name", "AllProjects", new { sortOrder = ViewBag.ProjectNameSortParam })
        </th>
        <th>
            @Html.ActionLink("Delivery", "AllProjects", new { sortOrder = ViewBag.DeliverySortParam })
        </th>
        <th></th>
    </tr>
    @foreach (var project in Model.Children)
    {
        <tr>
            <td>
                @project.Fields.Name
            </td>
            <td>
                @project.Fields.Delivery
            </td>
            <td>
                <div class="btn-group" role="group">
                    <a class="btn btn-default" href="@Url.Action("Details", "Projects", new { id = project.NodeID })">
                        Details
                        <span class="glyphicon glyphicon-zoom-in" aria-hidden="true"></span>
                    </a>
                </div>
            </td>
        </tr>
    }
</table>

<div>
    @Html.ActionLink("Back to sections", "Index", null, new { @class = "btn btn-default" })
</div>