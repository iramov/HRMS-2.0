@model IEnumerable<CMS.DocumentEngine.Types.Project>

@{
    ViewBag.Title = "AllProjects";
}

<h2>All projects</h2>

<table class="table table-striped table-hover table-bordered">
    <tr>
        <th>
            @Html.ActionLink("Project name", "AllProjects", new { sortOrder = ViewBag.NameSort })
        </th>
        <th>
            @Html.ActionLink("Delivery", "AllProjects", new { sortOrder = ViewBag.DeliverySort })
        </th>
        <th></th>
    </tr>
    @foreach (var project in Model)
    {
        <tr>
            <td>
                @project.Fields.Name
            </td>
            <td>
                @project.Fields.Delivery
            </td>
            <td>
                <div class="btn-group" role="group">
                    <a class="btn btn-default" href="@Url.Action("Details", "Projects", new { id = project.NodeID })">
                        Details
                        <span class="glyphicon glyphicon-zoom-in" aria-hidden="true"></span>
                    </a>
                </div>
            </td>
        </tr>
    }
</table>

<div>
    @Html.ActionLink("Back to sections", "Index")
</div>