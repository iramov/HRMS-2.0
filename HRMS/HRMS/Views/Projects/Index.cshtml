@model IEnumerable<CMS.DocumentEngine.Types.Projects>
@{
    ViewBag.Title = "Index";
}

<h2>All sections</h2>

<table class="table table-striped table-hover table-bordered">

    <tr>
     
        <th>
            @Html.ActionLink("Projects section", "Index", new { sortOrder = ViewBag.ProjectSectionSort })
        </th>
        <th>Description</th>

    </tr>

    @foreach (var project in Model)
    {
        <tr>
            <td>
                @project.Fields.SectionName
            </td>
            <td>
                @project.Fields.Description
            </td>

            <td>
                <div class="btn-group" role="group">
                    <a class="btn btn-default" href="@Url.Action("AllProjects", "Projects", new { id = project.NodeID })">
                        Details
                        <span class="glyphicon glyphicon-zoom-in" aria-hidden="true"></span>
                    </a>
                </div>
            </td>
        </tr>
    }

</table>

<div>
    @Html.ActionLink("Back to List", "Index", "Home", null, new { @class = "btn btn-default" })
</div>