@model IEnumerable<CMS.DocumentEngine.Types.Project>

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<h2>All projects</h2>

<table class="table table-striped table-hover table-bordered">
    <tr>
        <th>
            Project name
        </th>
        <th>
            Delivery
        </th>
        <th>
            Description
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Fields.Name
            </td>
            <td>
                @item.Fields.Delivery
            </td>
            <td>
                @item.Fields.Description
            </td>
