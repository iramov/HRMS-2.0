@model HRMS.Models.ViewModels.ProjectViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Project details</h2>

<div>
    <dl class="dl-horizontal">
        <dt>
            Project name
        </dt>
        <dd>
            @Model.Project.ProjectName
        </dd>
        <dt>
            Delivery
        </dt>
        <dd>
            @Model.Project.Delivery
        </dd>
        <dt>
            Description
        </dt>
        <dd>
            @Model.Project.Description
        </dd>
    </dl>
</div>

<h3>Included teams</h3>
<table class="table table-striped table-hover table-bordered">
    <tr>
        <th>Team name</th>
        <th>Description</th>
        <th></th>
    </tr>

    @foreach (CMS.DocumentEngine.Types.Teams team in Model.Teams)
    {
        <tr>
            <td>
                @team.Fields.SectionName
            </td>
            <td>
                @Html.ActionLink("Details", "SectionDetails", "Teams", new { id = team.NodeID, parentId = Model.Project.NodeID }, new { @class = "btn btn-default" })
            </td>
        </tr>
    }
</table>

<div>
    @Html.ActionLink("Back to sections", "Index")
</div>

